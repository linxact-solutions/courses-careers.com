								<div class="grid grid-cols-2 md:grid-cols-3 gap-3">
									<div class="bg-orange-50 rounded p-3 text-center">
										<span class="text-sm font-medium">Business & Law</span>
									</div>
									<div class="bg-orange-50 rounded p-3 text-center">
										<span class="text-sm font-medium">Business & Psychology</span>
									</div>
									<div class="bg-orange-50 rounded p-3 text-center">
										<span class="text-sm font-medium">Business & Languages</span>
									</div>
									<div class="bg-orange-50 rounded p-3 text-center">
										<span class="text-sm font-medium">Business & Computing</span>
									</div>
									<div class="bg-orange-50 rounded p-3 text-center">
										<span class="text-sm font-medium">Business & Design</span>
									</div>
									<div class="bg-orange-50 rounded p-3 text-center">
										<span class="text-sm font-medium">Business & Sport</span>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Core Modules -->
					<div class="mb-12">
						<h2 class="text-3xl font-bold text-gray-900 mb-6">What You'll Study</h2>
						
						<div class="bg-gray-50 rounded-lg p-6 mb-6">
							<h3 class="text-xl font-semibold text-gray-900 mb-4">Year 1: Foundation</h3>
