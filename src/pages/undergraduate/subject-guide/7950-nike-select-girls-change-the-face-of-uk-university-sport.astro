const title = "Nike Select Girls Change the Face of UK University Sport";
const description = "Discover how Nike Select Girls are transforming UK university sport with innovative programs, elite training, and new opportunities for female athletes.";
const keywords = "Nike Select Girls, university sport, UK sport, female athletes, sports scholarships, university athletics, sports science";
---

<Layout 
	title={title}
	description={description}
	keywords={keywords}
	section="undergraduate"
>
	<!-- Breadcrumb Navigation -->
	<nav class="bg-gray-100 py-4">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<ol class="flex items-center space-x-2 text-sm">
				<li><a href="/" class="text-gray-500 hover:text-orange-600">Home</a></li>
				<li class="text-gray-400">/</li>
				<li><a href="/undergraduate" class="text-gray-500 hover:text-orange-600">Undergraduate</a></li>
				<li class="text-gray-400">/</li>
				<li><a href="/undergraduate/subject-guide" class="text-gray-500 hover:text-orange-600">Subject Guide</a></li>
				<li class="text-gray-400">/</li>
				<li class="text-orange-600 font-medium">Nike Select Girls Change UK University Sport</li>
			</ol>
		</div>
	</nav>

	<!-- Article Header -->
	<section class="py-12 bg-white">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-8">
				<div class="flex justify-center mb-4">
					<span class="bg-orange-100 text-orange-800 text-sm font-medium px-3 py-1 rounded-full">Sports Science</span>
				</div>
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Nike Select Girls Change the Face of UK University Sport
				</h1>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					How Nike Select Girls are transforming UK university sport with innovative programs and elite training opportunities
				</p>
			</div>
			
			<!-- Article Meta -->
			<div class="flex items-center justify-center space-x-6 text-sm text-gray-500 mb-8">
				<div class="flex items-center">
					<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4M9 7h6M8 7H6a1 1 0 00-1 1v10a1 1 0 001 1h12a1 1 0 001-1V8a1 1 0 00-1-1h-2M9 11h6m-6 4h6"></path>
					</svg>
					Updated: 2024
				</div>
				<div class="flex items-center">
					<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					5 min read
				</div>
			</div>
		</div>
	</section>

	<!-- Hero Image Section -->
	<section class="py-8 bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="bg-gradient-to-r from-orange-600 to-red-600 rounded-lg p-8 text-white text-center">
				<h2 class="text-3xl font-bold mb-4">Nike Select Programme</h2>
				<p class="text-xl text-orange-100">Empowering female athletes in UK universities</p>
			</div>
		</div>
	</section>

	<!-- Article Content -->
	<section class="py-12 bg-white">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="bg-white rounded-lg shadow-lg overflow-hidden">
				<div class="p-8 md:p-12">
					<!-- Introduction -->
					<div class="prose prose-lg max-w-none mb-12">
						<p class="text-xl text-gray-700 leading-relaxed">
							The Nike Select Girls programme represents a revolutionary approach to women's university sport in the UK. By combining elite athletic training with academic excellence, this innovative initiative is transforming how female athletes pursue their sporting and educational goals.
						</p>
						
						<p class="text-gray-600">
							This groundbreaking programme provides unprecedented opportunities for talented female athletes to excel both on the field and in the classroom, setting new standards for university sport across the UK.
						</p>
					</div>

					<!-- Programme Overview -->
					<div class="mb-12">
						<h2 class="text-3xl font-bold text-gray-900 mb-6">What is Nike Select Girls?</h2>
						
						<div class="bg-gradient-to-r from-orange-50 to-red-50 rounded-lg p-6 mb-6">
							<p class="text-gray-700">
								Nike Select Girls is an elite programme designed to identify, develop, and support exceptional female athletes during their university years. The programme combines world-class training facilities, expert coaching, and academic support to help students achieve their full potential in both sport and education.
							</p>
						</div>

						<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
							<div class="bg-blue-50 rounded-lg p-6">
								<h3 class="text-lg font-semibold text-blue-900 mb-3">Elite Training</h3>
								<p class="text-blue-800 text-sm">Access to professional-grade training facilities and equipment used by Olympic athletes.</p>
							</div>
							
							<div class="bg-green-50 rounded-lg p-6">
								<h3 class="text-lg font-semibold text-green-900 mb-3">Academic Support</h3>
								<p class="text-green-800 text-sm">Flexible study programmes that accommodate intensive training schedules.</p>
							</div>
							
							<div class="bg-purple-50 rounded-lg p-6">
								<h3 class="text-lg font-semibold text-purple-900 mb-3">Career Development</h3>
								<p class="text-purple-800 text-sm">Pathway programmes leading to professional sporting careers and industry connections.</p>
							</div>
						</div>
					</div>

					<!-- Impact on University Sport -->
					<div class="mb-12">
						<h2 class="text-3xl font-bold text-gray-900 mb-6">Transforming University Sport</h2>
						
						<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
							<div class="space-y-6">
								<div class="border-l-4 border-orange-500 pl-6">
									<h3 class="text-xl font-semibold text-gray-900 mb-2">Raising Standards</h3>
									<p class="text-gray-700">
										The programme has elevated the standard of women's university sport by providing access to professional-level training and coaching previously unavailable at the university level.
									</p>
								</div>
								
								<div class="border-l-4 border-orange-500 pl-6">
									<h3 class="text-xl font-semibold text-gray-900 mb-2">Increased Participation</h3>
									<p class="text-gray-700">
										More female students are now participating in university sport, inspired by the opportunities and support provided through the Nike Select programme.
									</p>
								</div>
							</div>
							
							<div class="space-y-6">
								<div class="border-l-4 border-red-500 pl-6">
									<h3 class="text-xl font-semibold text-gray-900 mb-2">Professional Pathways</h3>
									<p class="text-gray-700">
										The programme creates clear pathways from university sport to professional athletic careers, with many participants going on to represent their countries at international level.
									</p>
								</div>
								
								<div class="border-l-4 border-red-500 pl-6">
									<h3 class="text-xl font-semibold text-gray-900 mb-2">Enhanced Facilities</h3>
									<p class="text-gray-700">
										Universities participating in the programme have invested in state-of-the-art training facilities and equipment, benefiting all students, not just elite athletes.
									</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Sports Covered -->
					<div class="mb-12">
						<h2 class="text-3xl font-bold text-gray-900 mb-6">Sports Disciplines</h2>
						
						<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
							<div class="bg-gray-50 rounded-lg p-4 text-center">
								<div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
									<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
									</svg>
								</div>
								<h3 class="font-semibold text-gray-900">Athletics</h3>
								<p class="text-sm text-gray-600">Track and field events</p>
							</div>
							
							<div class="bg-gray-50 rounded-lg p-4 text-center">
								<div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
									<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
								</div>
								<h3 class="font-semibold text-gray-900">Football</h3>
								<p class="text-sm text-gray-600">Women's football</p>
							</div>
							
							<div class="bg-gray-50 rounded-lg p-4 text-center">
								<div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
									<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
