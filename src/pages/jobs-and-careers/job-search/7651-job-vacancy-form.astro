---
import Layout from '../../../layouts/Layout.astro';
---

<Layout 
    title="Job Vacancy Form - Get Recruited by Top Companies"
    description="Register for our free career matching service. Let recruiters find you and connect with employment opportunities that match your skills and interests."
    keywords="job vacancy form, career matching, recruitment service, graduate jobs, employment opportunities, job application"
    section="jobs-and-careers"
>
    <!-- Page Header -->
    <section class="bg-gradient-to-r from-purple-600 to-purple-800 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-4xl font-bold mb-4">
                    FREE Career Matching Service
                </h1>
                <p class="text-xl text-purple-100 max-w-3xl mx-auto">
                    Let recruiters find you! Register with our career matching service and get connected with employment opportunities that match your skills and career goals.
                </p>
            </div>
        </div>
    </section>

    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-4" aria-label="Breadcrumb">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <ol class="flex items-center space-x-2 text-sm text-gray-600">
                <li>
                    <a href="/" class="hover:text-purple-600 transition-colors">Home</a>
                </li>
                <li>
                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </li>
                <li>
                    <a href="/jobs-and-careers" class="hover:text-purple-600 transition-colors">Jobs and Careers</a>
                </li>
                <li>
                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </li>
                <li>
                    <a href="/jobs-and-careers/job-search" class="hover:text-purple-600 transition-colors">Job Search</a>
                </li>
                <li>
                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </li>
                <li class="text-gray-900 font-medium">Job Vacancy Form</li>
            </ol>
        </div>
    </nav>

    <!-- Main Content -->
    <section class="py-12 bg-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Form -->
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">
                            Career Registration Form
                        </h2>
                        
                        <form id="careerForm" class="space-y-6">
                            <!-- Personal Information -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">
                                        First Name <span class="text-red-500">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="firstName" 
                                        name="firstName" 
                                        required 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                        placeholder="Enter your first name"
                                    />
                                </div>
                                <div>
                                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">
                                        Last Name <span class="text-red-500">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="lastName" 
                                        name="lastName" 
                                        required 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                        placeholder="Enter your last name"
                                    />
                                </div>
                            </div>

                            <!-- Contact Information -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                                        Email Address <span class="text-red-500">*</span>
                                    </label>
                                    <input 
                                        type="email" 
                                        id="email" 
                                        name="email" 
                                        required 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                        placeholder="your.email@example.com"
                                    />
                                </div>
                                <div>
                                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                                        Phone Number
                                    </label>
                                    <input 
                                        type="tel" 
                                        id="phone" 
                                        name="phone" 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                        placeholder="07123 456789"
                                    />
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label for="city" class="block text-sm font-medium text-gray-700 mb-1">
                                        City <span class="text-red-500">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="city" 
                                        name="city" 
                                        required 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                        placeholder="London"
                                    />
                                </div>
                                <div>
                                    <label for="postcode" class="block text-sm font-medium text-gray-700 mb-1">
                                        Postcode
                                    </label>
                                    <input 
                                        type="text" 
                                        id="postcode" 
                                        name="postcode" 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                        placeholder="SW1A 1AA"
                                    />
                                </div>
                            </div>

                            <!-- Education Level -->
                            <div>
                                <label for="educationLevel" class="block text-sm font-medium text-gray-700 mb-1">
                                    Education Level <span class="text-red-500">*</span>
                                </label>
                                <select 
                                    id="educationLevel" 
                                    name="educationLevel" 
                                    required 
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                >
                                    <option value="">Select your education level</option>
                                    <option value="gcse">GCSE / O-Levels</option>
                                    <option value="alevels">A-Levels</option>
                                    <option value="btec">BTEC</option>
                                    <option value="diploma">Diploma</option>
                                    <option value="bachelor">Bachelor's Degree</option>
                                    <option value="master">Master's Degree</option>
                                    <option value="phd">PhD / Doctorate</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>

                            <!-- Career Sectors -->
                            <div>
                                <label for="careerSectors" class="block text-sm font-medium text-gray-700 mb-1">
                                    Preferred Career Sectors <span class="text-red-500">*</span>
                                </label>
                                <div class="grid grid-cols-2 md:grid-cols-3 gap-3 mt-2">
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="technology" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Technology</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="finance" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Finance</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="healthcare" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Healthcare</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="education" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Education</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="legal" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Legal</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="marketing" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Marketing</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="engineering" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Engineering</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="retail" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Retail</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="careerSectors" value="hospitality" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Hospitality</span>
                                    </label>
                                </div>
                            </div>

                            <!-- Employment Type -->
                            <div>
                                <label for="employmentType" class="block text-sm font-medium text-gray-700 mb-1">
                                    Employment Type <span class="text-red-500">*</span>
                                </label>
                                <select 
                                    id="employmentType" 
                                    name="employmentType" 
                                    required 
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                >
                                    <option value="">Select employment type</option>
                                    <option value="full-time">Full-time</option>
                                    <option value="part-time">Part-time</option>
                                    <option value="contract">Contract</option>
                                    <option value="internship">Internship</option>
                                    <option value="graduate-scheme">Graduate Scheme</option>
                                    <option value="apprenticeship">Apprenticeship</option>
                                </select>
                            </div>

                            <!-- Work Preferences -->
                            <div>
                                <label for="workPreferences" class="block text-sm font-medium text-gray-700 mb-1">
                                    Work Preferences
                                </label>
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-3 mt-2">
                                    <label class="flex items-center">
                                        <input type="checkbox" name="workPreferences" value="remote" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Remote Work</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="workPreferences" value="hybrid" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Hybrid</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="workPreferences" value="office" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Office-based</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="workPreferences" value="travel" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Travel Required</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="checkbox" name="workPreferences" value="flexible" class="mr-2 text-purple-600 focus:ring-purple-500" />
                                        <span class="text-sm">Flexible Hours</span>
                                    </label>
                                </div>
                            </div>

                            <!-- Skills -->
                            <div>
                                <label for="skills" class="block text-sm font-medium text-gray-700 mb-1">
                                    Key Skills
                                </label>
                                <textarea 
                                    id="skills" 
                                    name="skills" 
                                    rows="3" 
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                    placeholder="List your key skills, qualifications, and experience..."
                                ></textarea>
                            </div>

                            <!-- Additional Information -->
                            <div>
                                <label for="additionalInfo" class="block text-sm font-medium text-gray-700 mb-1">
                                    Additional Information
                                </label>
                                <textarea 
                                    id="additionalInfo" 
                                    name="additionalInfo" 
                                    rows="3" 
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                    placeholder="Any additional information about your career goals or preferences..."
                                ></textarea>
                            </div>

                            <!-- Consent -->
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="flex items-start">
                                    <input type="checkbox" name="consent" required class="mr-3 mt-1 text-purple-600 focus:ring-purple-500" />
                                    <span class="text-sm text-gray-700">
                                        I agree to be contacted by recruiters and employers about relevant job opportunities. I understand that my information will be shared with approved recruitment partners and employers who may have suitable positions for me. <span class="text-red-500">*</span>
                                    </span>
                                </label>
                            </div>

                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="flex items-start">
                                    <input type="checkbox" name="newsletters" class="mr-3 mt-1 text-purple-600 focus:ring-purple-500" />
                                    <span class="text-sm text-gray-700">
                                        I would like to receive career advice newsletters and job market updates.
                                    </span>
                                </label>
                            </div>

                            <!-- Submit Button -->
                            <div class="pt-4">
                                <button 
                                    type="submit" 
                                    class="w-full bg-purple-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors"
                                >
                                    Submit Registration
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <!-- How It Works -->
                    <div class="bg-purple-50 rounded-lg p-6 mb-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">How It Works</h3>
                        <div class="space-y-4">
                            <div class="flex items-start">
                                <div class="w-8 h-8 bg-purple-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3 mt-1">1</div>
                                <div>
                                    <h4 class="font-medium text-gray-900">Complete Your Profile</h4>
                                    <p class="text-sm text-gray-600">Fill out the form with your details and preferences</p>
                                </div>
                            </div>
                            <div class="flex items-start">
                                <div class="w-8 h-8 bg-purple-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3 mt-1">2</div>
                                <div>
                                    <h4 class="font-medium text-gray-900">Get Matched</h4>
                                    <p class="text-sm text-gray-600">Our system matches you with relevant opportunities</p>
                                </div>
                            </div>
                            <div class="flex items-start">
                                <div class="w-8 h-8 bg-purple-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3 mt-1">3</div>
                                <div>
                                    <h4 class="font-medium text-gray-900">Connect with Employers</h4>
                                    <p class="text-sm text-gray-600">Recruiters contact you directly about suitable roles</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Benefits -->
                    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Why Choose Our Service?</h3>
                        <div class="space-y-3">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-sm text-gray-700">Completely free service</span>
                            </div>
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-sm text-gray-700">Access to exclusive job opportunities</span>
                            </div>
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-sm text-gray-700">Direct contact with recruiters</span>
                            </div>
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-sm text-gray-700">Personalized job matching</span>
                            </div>
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-sm text-gray-700">Career guidance and support</span>
                            </div>
                        </div>
                    </div>

                    <!-- Contact -->
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Need Help?</h3>
                        <p class="text-sm text-gray-600 mb-4">
                            If you have any questions about our service or need assistance with your registration, please don't hesitate to contact us.
                        </p>
                        <div class="space-y-2 text-sm">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <span class="text-gray-700">careers@courses-careers.com</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                                <span class="text-gray-700">0800 123 4567</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<script>
    // Form validation and submission
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('careerForm');
        
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Basic form validation
            const requiredFields = form.querySelectorAll('[required]');
            const careerSectors = form.querySelectorAll('input[name="careerSectors"]:checked');
            
            let isValid = true;
            
            // Check required fields
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                    field.classList.add('border-red-500');
                } else {
                    field.classList.remove('border-red-500');
                }
            });
            
            // Check if at least one career sector is selected
            if (careerSectors.length === 0) {
                isValid = false;
                alert('Please select at least one career sector.');
            }
            
            if (isValid) {
                // Show success message
                const submitButton = form.querySelector('button[type="submit"]');
                submitButton.innerHTML = 'Registration Submitted!';
                submitButton.classList.remove('bg-purple-600', 'hover:bg-purple-700');
                submitButton.classList.add('bg-green-600');
                submitButton.disabled = true;
                
                // Show success message
                const successMessage = document.createElement('div');
                successMessage.className = 'bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mt-4';
                successMessage.innerHTML = `
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span>Thank you for registering! We'll be in touch soon with relevant opportunities.</span>
                    </div>
                `;
                form.appendChild(successMessage);
                
                // Scroll to success message
                successMessage.scrollIntoView({ behavior: 'smooth' });
            }
        });
    });
</script>