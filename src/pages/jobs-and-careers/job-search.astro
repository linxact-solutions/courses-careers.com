---
import Layout from '../../layouts/Layout.astro';

const jobSearchResources = [
    {
        title: "CV Writing Guide",
        description: "Learn how to create a compelling CV that stands out to employers and showcases your skills effectively.",
        icon: "document",
        color: "bg-blue-100 text-blue-800"
    },
    {
        title: "Interview Preparation",
        description: "Master the art of job interviews with our comprehensive guide to common questions and best practices.",
        icon: "chat",
        color: "bg-green-100 text-green-800"
    },
    {
        title: "Job Search Strategies",
        description: "Discover effective techniques for finding and applying to jobs that match your career goals.",
        icon: "search",
        color: "bg-purple-100 text-purple-800"
    },
    {
        title: "Cover Letter Tips",
        description: "Write compelling cover letters that grab attention and demonstrate your enthusiasm for the role.",
        icon: "mail",
        color: "bg-orange-100 text-orange-800"
    },
    {
        title: "Networking Essentials",
        description: "Build valuable professional connections that can lead to career opportunities and mentorship.",
        icon: "users",
        color: "bg-pink-100 text-pink-800"
    },
    {
        title: "Salary Negotiation",
        description: "Learn how to negotiate fair compensation and benefits packages with confidence.",
        icon: "currency",
        color: "bg-teal-100 text-teal-800"
    }
];

const topEmployers = [
    {
        name: "Tech Innovation Ltd",
        location: "London",
        sector: "Technology",
        openings: 15,
        description: "Leading technology company looking for graduates in software development and digital marketing."
    },
    {
        name: "Healthcare Solutions UK",
        location: "Manchester",
        sector: "Healthcare",
        openings: 8,
        description: "Growing healthcare provider seeking qualified professionals in nursing and administration."
    },
    {
        name: "Financial Services Group",
        location: "Edinburgh",
        sector: "Finance",
        openings: 12,
        description: "Established financial services company offering graduate training programs."
    },
    {
        name: "Green Energy Corp",
        location: "Cardiff",
        sector: "Energy",
        openings: 6,
        description: "Renewable energy company looking for engineers and project managers."
    }
];

const marketInsights = [
    {
        title: "Graduate Job Market 2025",
        stat: "24% increase",
        description: "Graduate employment opportunities have increased significantly compared to last year."
    },
    {
        title: "Remote Work Trends",
        stat: "65% of jobs",
        description: "Offer flexible working arrangements including remote and hybrid options."
    },
    {
        title: "Skills in Demand",
        stat: "Top 3 skills",
        description: "Digital literacy, communication, and problem-solving are most sought after."
    },
    {
        title: "Average Starting Salary",
        stat: "£28,500",
        description: "UK graduate starting salaries have increased by 8% in the past year."
    }
];
---

<Layout 
    title="Job Search - Find Your Perfect Career Opportunity"
    description="Comprehensive job search resources, career guidance, and employment opportunities for students and graduates in the UK."
    keywords="job search, career opportunities, graduate jobs, employment resources, job applications, CV writing, interview tips"
    section="jobs-and-careers"
>
    <!-- Page Header -->
    <section class="bg-gradient-to-r from-purple-600 to-purple-800 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    Job Search Resources
                </h1>
                <p class="text-xl text-purple-100 max-w-3xl mx-auto">
                    Find your ideal career with our comprehensive job search tools, expert guidance, and direct connections to top employers.
                </p>
            </div>
        </div>
    </section>

    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-4" aria-label="Breadcrumb">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <ol class="flex items-center space-x-2 text-sm text-gray-600">
                <li>
                    <a href="/" class="hover:text-purple-600 transition-colors">Home</a>
                </li>
                <li>
                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </li>
                <li>
                    <a href="/jobs-and-careers" class="hover:text-purple-600 transition-colors">Jobs and Careers</a>
                </li>
                <li>
                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </li>
                <li class="text-gray-900 font-medium">Job Search</li>
            </ol>
        </div>
    </nav>

    <!-- Quick Actions -->
    <section class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Register for Job Opportunities -->
                <div class="bg-gradient-to-r from-purple-600 to-purple-700 text-white rounded-lg p-8">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 01-2 2H10a2 2 0 01-2-2V6" />
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold">FREE Career Matching Service</h2>
                    </div>
                    <p class="text-purple-100 mb-6">
                        Let us do the work for you! Fill out our form and get matched with recruiters who have opportunities that match your skills and interests.
                    </p>
                    <a 
                        href="/jobs-and-careers/job-search/7651-job-vacancy-form"
                        class="inline-block bg-white text-purple-600 px-6 py-3 rounded-lg font-semibold hover:bg-purple-50 transition-colors"
                    >
                        Register Now - It's Free!
                    </a>
                </div>

                <!-- Career Guidance -->
                <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg p-8">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold">Career Guidance</h2>
                    </div>
                    <p class="text-blue-100 mb-6">
                        Not sure which career path is right for you? Explore different sectors and get expert advice on finding your perfect career match.
                    </p>
                    <a 
                        href="/jobs-and-careers/career-sectors"
                        class="inline-block bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
                    >
                        Explore Career Sectors
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Job Search Resources -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    Job Search Resources
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Master the job search process with our comprehensive guides and expert advice.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {jobSearchResources.map((resource) => (
                    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                        <div class="flex items-center mb-4">
                            <div class={`w-12 h-12 rounded-lg flex items-center justify-center mr-4 ${resource.color}`}>
                                {resource.icon === 'document' && (
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                )}
                                {resource.icon === 'chat' && (
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                    </svg>
                                )}
                                {resource.icon === 'search' && (
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                    </svg>
                                )}
                                {resource.icon === 'mail' && (
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                )}
                                {resource.icon === 'users' && (
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                                    </svg>
                                )}
                                {resource.icon === 'currency' && (
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                                    </svg>
                                )}
                            </div>
                            <h3 class="text-lg font-semibold text-gray-900">{resource.title}</h3>
                        </div>
                        <p class="text-gray-600 mb-4">{resource.description}</p>
                        <a 
                            href="/jobs-and-careers/career-sectors"
                            class="text-purple-600 hover:text-purple-700 font-medium"
                        >
                            Learn More →
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Market Insights -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    Job Market Insights
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Stay informed about the latest trends and opportunities in the UK job market.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {marketInsights.map((insight) => (
                    <div class="text-center">
                        <div class="bg-purple-600 text-white rounded-lg p-6 mb-4">
                            <div class="text-3xl font-bold mb-2">{insight.stat}</div>
                            <div class="text-purple-100 font-medium">{insight.title}</div>
                        </div>
                        <p class="text-gray-600 text-sm">{insight.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Top Employers -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    Top Employers Hiring Now
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Connect with leading employers who are actively recruiting graduates and professionals.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {topEmployers.map((employer) => (
                    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-1">{employer.name}</h3>
                                <div class="flex items-center text-sm text-gray-600 mb-2">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    {employer.location}
                                </div>
                                <span class="inline-block bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded-full">
                                    {employer.sector}
                                </span>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold text-purple-600">{employer.openings}</div>
                                <div class="text-sm text-gray-500">Open Positions</div>
                            </div>
                        </div>
                        <p class="text-gray-600 mb-4">{employer.description}</p>
                        <a 
                            href="/jobs-and-careers/job-search/7651-job-vacancy-form"
                            class="inline-block bg-purple-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-purple-700 transition-colors"
                        >
                            View Opportunities
                        </a>
                    </div>
                ))}
            </div>

            <div class="text-center mt-8">
                <a 
                    href="/jobs-and-careers/job-search/7651-job-vacancy-form"
                    class="inline-block bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors"
                >
                    See All Employers
                </a>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-purple-600 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold mb-4">
                Ready to Find Your Dream Job?
            </h2>
            <p class="text-xl text-purple-100 mb-8 max-w-2xl mx-auto">
                Join thousands of successful graduates who have found their ideal career through our comprehensive job search platform.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a 
                    href="/jobs-and-careers/job-search/7651-job-vacancy-form"
                    class="bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-purple-50 transition-colors"
                >
                    Start Your Job Search
                </a>
                <a 
                    href="/jobs-and-careers/career-sectors"
                    class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-purple-600 transition-colors"
                >
                    Explore Career Options
                </a>
            </div>
        </div>
    </section>
</Layout>