    coverImage: '/images/stories/online-magazines/ccuk_30.5.jpg',
    publishDate: '2025-01-15',
    readTime: '48 min read',
    featured: true,
    url: '#',
    highlights: [
      'International Study Options',
      'Global Career Opportunities',
      'Cross-Cultural Skills',
