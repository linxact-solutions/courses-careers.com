    ]
  }
];

const specializations = [
  { 
    name: 'Research & PhD', 
    icon: 'üî¨', 
    description: 'Advanced research opportunities and doctoral programs',
    count: 45 
  },
  { 
    name: 'MBA & Business', 
    icon: 'üíº', 
    description: 'Business leadership and management development',
    count: 38 
  },
  { 
    name: 'Professional Development', 
